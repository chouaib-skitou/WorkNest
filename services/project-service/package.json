{
  "name": "project-service",
  "version": "1.0.0",
  "type": "module",
  "main": "server.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --runInBand --forceExit --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:setup": "node tests/setupTestDB.js",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "start": "node dist/server.js",
    "dev": "nodemon server.js",
    "build": "npx prisma generate && npm run transpile",
    "lint": "eslint . --max-warnings=0 && echo âœ… All good ðŸŽ‰",
    "lint:fix": "eslint . --fix",
    "transpile": "babel . --out-dir dist --ignore node_modules",
    "generate:jwt": "mkdir config\\jwt 2>nul & openssl rand -hex 64 > config\\jwt\\JWT_SECRET & openssl rand -hex 64 > config\\jwt\\JWT_REFRESH_SECRET && echo âœ… JWT keys generated in /config/jwt/",
    "migrate:dev": "npx prisma migrate dev --name init",
    "migrate:prod": "npx prisma migrate deploy",
    "migrate:reset": "npx prisma migrate reset --force",
    "studio": "npx prisma studio"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^6.3.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.10.0",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.7",
    "@babel/preset-env": "^7.26.7",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.3.1",
    "supertest": "^7.0.0"
  }
}
